	var canpagos = 1;
	var calcular = function() {
		row = $(this).parent().parent();
		monto = $(row).find('#cMonto').val();
		monto = monto.replace('$','');
		monto = monto.replace(/,/g,'');
		monto = parseFloat(monto);
		descuento = $(this).val();
