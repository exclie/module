			descuento = descuento.replace('$','');
			descuento = descuento.replace(/,/g,'');
			descuento = parseFloat(descuento);
			totalnuevo = 0;
			totalnuevo = monto-descuento;
			$(row).find('#cTotal').val(numeral(totalnuevo).format('$ 0,0.00'));
		} else {
			$(row).find('#cTotal').val(numeral(monto).format('$ 0,0.00'));
		}	
		subtotal = 0;
		$('.totales').each(function() {
			x = $(this).val();
			x = x.replace('$','');
			x = x.replace(/,/g,'');
			subtotal += parseFloat(x);
		});
		iva = subtotal*(0.16);
		total = subtotal*(1.16);
		calcularadicional();
		calcularrestante();

	};
	
	var calcularporciento = function() {
		row = $(this).parent().parent().parent();
		porcentaje = $(this).val();
		monto = $(row).find('#cMonto').val();
		monto = monto.replace('$','');
		monto = monto.replace(/,/g,'');
		monto = parseFloat(monto);
		total = (1-(porcentaje/100))*monto;
		$(row).find('#cTotal').val(numeral(total).format('$ 0,0.00'));
		subtotal = 0;
		$('.totales').each(function() {
			x = $(this).val();
			x = x.replace('$','');
			x = x.replace(/,/g,'');
			subtotal += parseFloat(x);
		});
		iva = subtotal*(0.16);
		total = subtotal*(1.16);
		calcularadicional();
		calcularrestante();

	}

	var checartipo = function () {
